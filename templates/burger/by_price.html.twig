{% extends 'base.html.twig' %}

{% block title %}Burgers avec au moins {{ min }} ingrédients{% endblock %}

{% block content %}
    
    <h1>Méthode qui retourne les burgers ayant au moins {{ min }} ingrédients</h1>
    
    {% if burgers is not empty %}
        <ul>
            {% for burger in burgers %}
                <li>
                    {{ burger.nom }}
                    — Pain : {{ burger.pain.nom ?? 'aucun' }}
                    — Oignon : {{ burger.oignon.nom ?? 'aucun' }}
                    — Sauce : {{ burger.sauce.nom ?? 'aucune' }}
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p>Aucun burger trouvé avec au moins {{ min }} ingrédients.</p>
    {% endif %}
    
    <a href="{{ path('burger_liste') }}">Retour à la liste des burgers</a>
    
    
{% endblock %}