{% extends 'base.html.twig' %}

{% block title %}Burgers avec l'ingrédient "{{ ingredient }}"{% endblock %}

{% block content %}
    {% include '_header.html.twig' %}
    <h1>Burgers avec l'ingrédient "{{ ingredient }}"</h1>
    {% if burgers is not empty %}
        <ul>
            {% for burger in burgers %}
                <li>
                    {{ burger.name is defined ? burger.name : burger.nom }}
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p>Aucun burger trouvé avec cet ingrédient.</p>
    {% endif %}
    <a href="{{ path('burger_index') }}">Retour à la liste des burgers</a>
    {% include '_footer.html.twig' %}
{% endblock %}